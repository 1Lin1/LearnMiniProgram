.all-cate-goodslist{
  width: 100%;
  height: 100%;
  display: grid;
  grid-template-rows: 30% 100%;
  justify-items: center;
  align-items: center;
  
}

.cate-goodslist{
  width: 100%;
  height: 100%;
  
  display: grid;
  grid-template-columns:repeat(2,50%);
  grid-template-rows: repeat(4,25%);
  
  align-items: flex-end;
  justify-items: center;
  
  padding: 6rpx;
  border: 3rpx solid #eee;
  
  padding-bottom: 70rpx;
  
}
.topImage{
  width: 100%;
  height: 100%;
  
}

