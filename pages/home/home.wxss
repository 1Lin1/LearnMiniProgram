/* 流行图的自适应加width100% */

.popular image {
    width: 100%;
    height: 100%;
    border-bottom: 14rpx solid #eee;
}

.goods-list {
    margin-top: 30rpx;
    display: grid;
    grid-template-columns: 1fr 1fr;
    justify-content: space-evenly;
    align-content: center;
}

.fixed{
  position: fixed;
  top: 0;
  left:0;
  right: 0;
  background-color: #FFF;
  padding: 4rpx 0;
}