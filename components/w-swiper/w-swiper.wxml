<swiper class="swiper" 
  circular
  autoplay
  indicator-dots
  indicator-color="#ffffff"
  indicator-active-color="#ff5777"
  interval="2000"
  duration="300"
  >
  <block wx:for="{{list}}" wx:key="index">
    <swiper-item class="swiper-item">
      <image src="{{item.image}}" mode="widthFix"></image>
    </swiper-item>
  </block>
</swiper>
