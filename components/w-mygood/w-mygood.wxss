/* components/w-mygood/w-mygood.wxss */

.good-price {
    display: flex;
    padding: 30rpx 0;
    justify-content: space-evenly;
    align-content: center;
    
    align-items: center;
}

.good-price text:first-child{
    font-size: 40rpx;
    color: #ff1735;
}

.good-price text:last-child{
    text-decoration: line-through;
    font-size: 30rpx;
}




.goods-item {
    padding: 10rpx 20rpx;
}

.goods-item image {
    width: 100%;
}

.base-info>text {
    font-size: 36rpx;
    color: #555;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    text-overflow: ellipsis;
    overflow: hidden;
}